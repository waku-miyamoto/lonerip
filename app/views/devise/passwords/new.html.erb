<div class="wrapper">
<h2 class="devise-title">パスワードを忘れた方</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class= "signup-signin">
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "user-ent" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードのリセット方法を送ってください", class: "user-setup" %>
  </div>
<% end %>
</div>
</div>