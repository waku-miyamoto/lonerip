.wrapper
  %h2.devise-title 新規登録
  = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
    = devise_error_messages!
    .signup-signin
      .field
        = f.label :名前
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "user-ent"
      .field
        = f.label :メールアドレス
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "user-ent"
      .field
        = f.label :パスワード
        - if @minimum_password_length
          %em
            (#{@minimum_password_length}文字以上の半角英数)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "user-ent"
      .field
        = f.label :上記のパスワード
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "user-ent"
      .actions
        = f.submit "登録", class: "user-setup"
        　
