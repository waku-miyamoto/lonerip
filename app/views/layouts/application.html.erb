<!DOCTYPE html>
<html>
  <head>
    <title>Lonerip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="header">
    <div class="title">
      <%= link_to "LONERIP", "/", class: "main-title"%>
    </div>
  <% if user_signed_in? %>
          <div class="user_nav grid-6">
             <span><%= current_user.name %>
            <ul class="user__info">
              <li>
                <%= link_to "マイページ", "/users/#{current_user.id}", class: "user-set" %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "user-set" %>
              </li>
            </ul>
          </span>
            <%= link_to  "投稿する", new_post_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "user-new" %>
            <%= link_to "新規登録", new_user_registration_path, class: "user-new" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= render 'layouts/notifications' %>
    <%= yield %>
  </body>
</html>
